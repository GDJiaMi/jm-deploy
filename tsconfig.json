{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": [
      "es2015",
    ],
    "target": "es5",
    "strict": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "types",
      "node_modules/@types",
    ]
  },
  "exclude": [
    "node_modules"
  ]
}